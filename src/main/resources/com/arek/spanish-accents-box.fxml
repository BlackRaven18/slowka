<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<HBox fx:id="spanishAccentsBox" alignment="TOP_CENTER" fillHeight="false" prefHeight="50.0" prefWidth="720.0" spacing="5.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.arek.controllers.SpanishAccentsBoxController">
   <children>
      <Button fx:id="firstAccentButton" mnemonicParsing="false" onAction="#insertFirstAccent" prefHeight="25.0" prefWidth="25.0" text="á">
